<%= form_for @admission, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field', :placeholder => 'Enter First Name', :required => true %>
    </div>
  </div>
  <div class="control-group ">
    <%= f.label :middle_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :middle_name, :class => 'text_field',:placeholder => 'Enter Middle Name', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field',:placeholder => 'Enter Last Name', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :father_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :father_name, :class => 'text_field', :placeholder => 'Enter Father Name', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mother_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mother_name, :class => 'text_field',:placeholder => 'Enter Mother Name', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_of_birth, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date_of_birth, :class => 'text_field',:placeholder => 'Enter Date of Birth', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :age, :class => 'text_field',:placeholder => 'Enter Age', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact, :class => 'text_field',:placeholder => 'Enter Contact', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field',:placeholder => 'Enter Email', :required => true %>
    </div>
  </div>

  <h3>Previous Institutional Details.</h3>
  <div class="control-group">
    <%= f.label :college_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :college_name, :class => 'text_field',:placeholder => 'Enter School Name', :required => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :university_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :university_name, :class => 'text_field',:placeholder => 'Enter University Name', :required => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :qualification, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :qualification, :class => 'text_field',:placeholder => 'Enter Qualification', :required => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :passong_year, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :passong_year, :class => 'text_field',:placeholder => 'Enter Year of Passout', :required => true %>
    </div>
  </div>

  <h3>Additional Details.</h3>

  <div class="control-group">
    <%= f.label :driving_lecense, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :driving_lecense, :class => 'check_box' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :voter_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :voter_id, :class => 'check_box' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :adhar_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :adhar_id, :class => 'check_box' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :passport, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :passport, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit'Save', :class => 'btn btn-success' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admissions_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
